[Unit]
Description=Start 80211ah mesh mode (using 80211s)
After=boot-mode-switch.service
ConditionPathExists=!/run/boot-mode/lock

[Service]
Type=simple
ExecStart=/usr/local/bin/80211s_start.sh --gateway
ExecStopPost=/usr/local/bin/80211s_stop.sh
Restart=on-failure
User=root

[Install]
WantedBy=multi-user.target
